<%- include('partials/_header') %> %>

  <a href="/">
    <button>INICIO</button>
  </a>

  <!-- MODULO DE NOMBRE DE EQUIPOS -->
  <div class="d-flex justify-content-around ">

    <div class="col-lg-5 p-3">
      <input id="equipoA" placeholder="EQUIPO A" class="border border-0 display-5"></input>
    </div>
    <div class="col-lg-5 bg-secondary text-white p-3">
      <h4>EQUIPO B</h4>
    </div>
  </div>
  
  <table class="col-lg-5 p-3">
    <!-- MODULO DE ENCABEZADO DE PLANILLAS -->
    <tr>
      <th>NUMERO</th>
      <th>NOMBRE</th>
      <th>DOCUMENTO</th>
    </tr>

    <% data.forEach((player, index) => { %>
          <td><%=player.numero %></td>
          <td><%=player.nombre %></td>
          <td><%=player.documento %></td>
        </tr>
    <% }) %>  
        
  </table>

  <!-- MODULO DE PLANILLAS -->
  <form onsubmit="window.location.reload()" id="formPlayer" class="col-lg-5 p-3">
    <input name="numero" placeholder="##" class="col-lg-1"></input>
    <input name="nombre" placeholder="Nombre" class="col-lg-6"></input>
    <input name="documento" placeholder="Documento" class="col-lg-3"></input>
    <button type="submit">+</button>
  </form>

  <script>
    document.getElementById('formPlayer').addEventListener('submit', function(event) {
      event.preventDefault();

      var formData = new FormData(event.target);
      var data = {};
      formData.forEach(function(value, key) {
          data[key] = value;
      });
      var jsonData = JSON.stringify(data);

    fetch('/newPlayer', {
      method: 'POST',
      headers: {
                  'Content-Type': 'application/json'
                },
      body: jsonData
      })})

  </script> 

</body>

</html>     