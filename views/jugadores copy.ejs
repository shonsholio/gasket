<%- include('partials/_header') %> %>

  <a href="/">
    <button>INICIO</button>
  </a>

  <!-- MODULO DE NOMBRE DE EQUIPOS -->
  <div class="d-flex justify-content-around ">

    <% info.forEach((game, index) => { %>
      
    <div class="col-lg-6 d-block justify-content-center">
      <p class="border border-0 display-5"><%=game.equipoA %></p>
      <p class="border border-0">Coach: <%=game.coachA %></p>
    </div>
    
    <div class="col-lg-6">
      <p class="border border-0 display-5"><%=game.equipoB %></p>
      <p class="border border-0">Coach: <%=game.coachB %></p>      
    </div>

    <% }) %>

  </div>

  <div class="d-lg-flex align-items-center">
    <form action="/players" method="post" onsubmit="window.location.reload()" id="formPlayer" class="col-lg-5">
      <input name="nro" placeholder="##" class="col-lg-1" required></input>
      <input name="nombre" placeholder="Nombre" class="col-lg-6" required></input>
      <input name="documento" placeholder="Documento" class="col-lg-3" required></input>
      <button class="btn btn-info text-white" >+</button>
    </form>
  </div>

  <table class="col-lg-5">
    <!-- MODULO DE ENCABEZADO DE PLANILLAS -->
    <tr class="bg-secondary text-white">
      <th>##</th>
      <th>NOMBRE</th>
      <th>DOCUMENTO</th>
      <th></th>

    </tr>

    <tr class="">
    <% data.forEach((player, index) => { %>
      <td><%=player.nro %></td>
      <td><%=player.nombre %></td>
      <td><%=player.documento %></td>
      <td><a href="/deletePlayer/<%=player.documento %>"><button class="btn btn-danger"> - </button></td></a>
    </tr>
    <% }) %>  
      
  </table>

  <!-- MODULO DE PLANILLAS -->

</body>

</html>     